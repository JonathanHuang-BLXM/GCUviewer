<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">
            @color/abc_background_cache_hint_selector_material_light
        </item>
        <item name="colorAccent">@color/bright_foreground_disabled_material_light</item>
        <item name="android:textColorSecondary">@color/abc_input_method_navigation_guard</item>
    </style>

    <style name="CustomWindowTitleBackground">
        　　
        <item name="android:background">#778899</item>
        　　
    </style>
    　　

